{
    "name": "Olapus",
    "version": "0.1.1",
    "description": "Simple out of box solution for easy administering of any website.",
    "keywords": ["laravel", "cms"],
    "license": "MIT",
    "type": "project",
    "homepage": "https://www.olapus.com/",
    "authors": [
        {
            "name": "Jan Drda",
            "email": "jdrda@outlook.com",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "support@olapus.com",
        "irc": "irc://irc.freenode.org/composer"
    },
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.1.*",
        "greggilbert/recaptcha": "dev-master",
        "spatie/laravel-analytics": "dev-master",
        "graham-campbell/htmlmin": "dev-master",
        "doctrine/dbal": "dev-master"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"if(file_exists('app/Http/routesCustom.php') == FALSE) copy('app/Http/routesCustom-example.php', 'app/Http/routesCustom.php');\"",
            "php artisan clear-compiled",
            "php artisan optimize"
            
            
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php -r \"if(file_exists('app/Http/routesCustom.php') == FALSE) copy('app/Http/routesCustom-example.php', 'app/Http/routesCustom.php');\"",
            "php artisan optimize"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\"",
            "php -r \"$fp = ('database/database.sqlite', 'w'); fclose($fp); \""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
